<Configuration status="WARN">
  <Appenders>
    <CloudWatchAppender name="CloudWatch" logGroupName="MyLogGroup" logStreamName="MyLogStream" region="us-east-1" accessKeyId="YOUR_ACCESS_KEY" secretAccessKey="YOUR_SECRET_KEY" flushIntervalSeconds="5">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %c{1.} [%t] %m%n" />
    </CloudWatchAppender>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="CloudWatch" />
    </Root>
  </Loggers>
</Configuration>
