<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="com.example.logging">
    <Appenders>
        <!-- Console Appender for local development -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
        <!-- CloudWatch Appender using IAM Role (recommended for EC2/ECS) -->
        <CloudWatch name="CloudWatchRole" 
                   region="us-east-1"
                   logGroupName="/my-application/logs"
                   logStreamName="application-stream-${date:yyyy-MM-dd}"
                   useRole="true"
                   ignoreExceptions="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </CloudWatch>
        
        <!-- CloudWatch Appender using explicit credentials -->
        <CloudWatch name="CloudWatchCredentials" 
                   region="us-west-2"
                   logGroupName="/my-application/logs"
                   logStreamName="application-stream-${date:yyyy-MM-dd}"
                   accessKey="${env:AWS_ACCESS_KEY_ID}"
                   secretKey="${env:AWS_SECRET_ACCESS_KEY}"
                   useRole="false"
                   ignoreExceptions="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </CloudWatch>
    </Appenders>
    
    <Loggers>
        <!-- Root logger configuration -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <!-- Use either CloudWatchRole OR CloudWatchCredentials, not both -->
            <AppenderRef ref="CloudWatchRole"/>
        </Root>
        
        <!-- Specific logger for your application -->
        <Logger name="com.example" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="CloudWatchRole"/>
        </Logger>
    </Loggers>
</Configuration>
